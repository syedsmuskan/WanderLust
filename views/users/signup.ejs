<% layout("layouts/boilerplate") %>

<div class="row">  
  <div class="col-6 offset-3">
    <h3 class="mb-3 text-center">Sign Up on WanderLust</h3>

<form action="/signup" method="POST" class="needs-validation" novalidate>

      <div class="mb-3">
        <label class="form-label">Username</label>
        <input 
          name="username" 
          type="text"
          class="form-control" 
          required>
      </div>

      <div class="mb-3">
        <label class="form-label">Email</label>
        <input 
          type="email" 
          name="email" 
          class="form-control" 
          required>
      </div>

      <div class="mb-3">
        <label class="form-label">Password</label>
        <input 
          type="password" 
          name="password" 
          class="form-control" 
          required>
      </div>

      <button class="btn btn-primary w-100">Sign Up</button>
    </form>
  </div>
</div>
